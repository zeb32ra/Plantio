<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".PlantCareFragment">

    <ScrollView
        android:id="@+id/scroll"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:scrollbars="vertical"
        tools:layout_editor_absoluteX="41dp"
        tools:layout_editor_absoluteY="26dp">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <LinearLayout
                android:id="@+id/calendar_lay"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:gravity="center_horizontal"
                android:orientation="horizontal"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent">

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:scaleType="centerCrop"
                    android:src="@drawable/calendar" />

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_horizontal"
                    android:orientation="vertical">

                    <TextView
                        android:id="@+id/text_1"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="7dp"
                        android:text="Полив:"
                        android:textColor="@color/black"
                        android:textSize="15sp" />

                    <TextView
                        android:id="@+id/text_2"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Удобрение:"
                        android:textColor="@color/black"
                        android:textSize="15sp" />

                    <TextView
                        android:id="@+id/text_3"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Опрыскивание:"
                        android:textColor="@color/black"
                        android:textSize="15sp" />

                    <TextView
                        android:id="@+id/text_4"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Обрезка:"
                        android:textColor="@color/black"
                        android:textSize="15sp" />

                </LinearLayout>

            </LinearLayout>

            <View
                android:id="@+id/line"
                android:layout_width="match_parent"
                android:layout_marginEnd="15dp"
                android:layout_marginStart="15dp"
                android:layout_height="3dp"
                android:layout_marginTop="10dp"
                android:foreground="@color/black"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/calendar_lay" />

            <TextView
                android:id="@+id/text1"
                android:layout_width="380dp"
                android:layout_height="wrap_content"
                android:layout_marginStart="20dp"
                android:layout_marginTop="5dp"
                android:text="Состояние"
                android:textColor="@color/black"
                android:textSize="20sp"
                android:textStyle="bold"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/line" />

            <LinearLayout
                android:id="@+id/mood_lay"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:gravity="center_horizontal"
                android:orientation="horizontal"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/text1">

                <ImageButton
                    android:id="@+id/sick_btn"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginEnd="30dp"
                    android:scaleType="centerCrop"
                    android:backgroundTint="@color/transparent"
                    android:src="@drawable/sick_icon" />

                <ImageButton
                    android:id="@+id/neutr_btn"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:scaleType="centerCrop"
                    android:backgroundTint="@color/transparent"
                    android:src="@drawable/neutral_icon" />

                <ImageButton
                    android:id="@+id/best_btn"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="30dp"
                    android:scaleType="centerCrop"
                    android:backgroundTint="@color/transparent"
                    android:src="@drawable/best_icon" />

            </LinearLayout>

            <View
                android:id="@+id/line_2"
                android:layout_width="match_parent"
                android:layout_marginEnd="15dp"
                android:layout_marginStart="15dp"
                android:layout_height="3dp"
                android:layout_marginTop="20dp"
                android:foreground="@color/black"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/mood_lay" />

            <TextView
                android:id="@+id/text2"
                android:layout_width="380dp"
                android:layout_height="wrap_content"
                android:layout_marginStart="20dp"
                android:layout_marginTop="5dp"
                android:text="Новая запись"
                android:textColor="@color/black"
                android:textSize="20sp"
                android:textStyle="bold"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/line_2" />

            <GridLayout
                android:id="@+id/notes_lay"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:columnCount="3"
                android:orientation="horizontal"
                android:rowCount="2"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/text2">

                <ImageButton
                    android:id="@+id/water_btn"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="15dp"
                    android:scaleType="centerCrop"
                    android:backgroundTint="@color/transparent"
                    android:src="@drawable/watering_can" />

                <ImageButton
                    android:id="@+id/spray_btn"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:scaleType="centerCrop"
                    android:layout_marginEnd="30dp"
                    android:backgroundTint="@color/transparent"
                    android:src="@drawable/spray" />

                <ImageButton
                    android:id="@+id/fertile_btn"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:scaleType="centerCrop"
                    android:backgroundTint="@color/transparent"
                    android:src="@drawable/fertilizer" />

                <ImageButton
                    android:id="@+id/cut_btn"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="15dp"
                    android:layout_marginTop="20dp"
                    android:layout_marginEnd="30dp"
                    android:scaleType="centerCrop"
                    android:backgroundTint="@color/transparent"
                    android:src="@drawable/pruning" />

            </GridLayout>

            <View
                android:id="@+id/line_3"
                android:layout_width="match_parent"
                android:layout_marginEnd="15dp"
                android:layout_marginStart="15dp"
                android:layout_height="3dp"
                android:layout_marginTop="20dp"
                android:foreground="@color/black"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/notes_lay" />

            <TextView
                android:id="@+id/text3"
                android:layout_width="380dp"
                android:layout_height="wrap_content"
                android:layout_marginStart="20dp"
                android:layout_marginTop="5dp"
                android:text="Напоминания"
                android:textColor="@color/black"
                android:textSize="20sp"
                android:textStyle="bold"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/line_3" />

            <Button
                android:id="@+id/add_notif"
                android:layout_width="60dp"
                android:layout_height="50dp"
                android:text="+"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toBottomOf="@id/line_3"
                android:textSize="20sp"
                android:layout_marginEnd="10dp"
                android:textColor="@color/black"
                />

            <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/recycler"
                android:layout_width="350dp"
                android:layout_height="wrap_content"
                android:layout_marginTop="20dp"
                android:scrollbars="vertical"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/text3"
                app:layout_constraintBottom_toTopOf="@id/line_4"/>

            <View
                android:id="@+id/line_4"
                android:layout_width="match_parent"
                android:layout_marginEnd="15dp"
                android:layout_marginStart="15dp"
                android:layout_height="3dp"
                android:layout_marginTop="20dp"
                android:foreground="@color/black"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/recycler" />

            <LinearLayout
                android:id="@+id/linearLayout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginTop="10dp"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/line_4"
                android:gravity="center_horizontal"
                >

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:layout_gravity="center_horizontal"
                    android:layout_marginEnd="20dp"
                    >

                    <TextView
                        android:id="@+id/Water"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Полив"
                        android:textStyle="bold"
                        android:textColor="@color/black"
                        android:textSize="25sp"
                        app:layout_constraintBottom_toTopOf="@+id/line"
                        app:layout_constraintEnd_toStartOf="@id/cd_view" />

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:layout_marginTop="5dp"
                        android:layout_gravity="center_horizontal">

                        <ImageView
                            android:id="@+id/water_drop_1"
                            android:layout_width="25dp"
                            android:layout_height="25dp"
                            android:scaleType="centerCrop"
                            app:srcCompat="@drawable/drop"
                            android:visibility="gone"
                            />

                        <ImageView
                            android:id="@+id/water_drop_2"
                            android:layout_width="25dp"
                            android:layout_height="25dp"
                            android:scaleType="centerCrop"
                            app:srcCompat="@drawable/drop"
                            android:visibility="gone"
                            />

                        <ImageView
                            android:id="@+id/water_drop_3"
                            android:layout_width="25dp"
                            android:layout_height="25dp"
                            android:scaleType="centerCrop"
                            app:srcCompat="@drawable/drop"
                            android:visibility="gone"
                            />

                    </LinearLayout>
                </LinearLayout>

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginEnd="30dp"
                    android:layout_marginStart="10dp"
                    android:gravity="center_horizontal"
                    android:orientation="vertical">

                    <TextView
                        android:id="@+id/Sun"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Свет"
                        android:textAlignment="center"
                        android:textStyle="bold"
                        android:textColor="@color/black"
                        android:textSize="25sp"
                        app:layout_constraintBottom_toTopOf="@+id/line"
                        app:layout_constraintEnd_toStartOf="@id/cd_view" />

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_horizontal"
                        android:layout_marginTop="7dp"
                        android:orientation="horizontal">

                        <ImageView
                            android:id="@+id/sun_iv_1"
                            android:layout_width="25dp"
                            android:layout_height="25dp"
                            android:scaleType="centerCrop"
                            app:srcCompat="@drawable/sun"
                            android:visibility="gone"
                            />

                        <ImageView
                            android:id="@+id/sun_iv_2"
                            android:layout_width="25dp"
                            android:layout_height="25dp"
                            android:scaleType="centerCrop"
                            app:srcCompat="@drawable/sun"
                            android:visibility="gone"
                            />

                        <ImageView
                            android:id="@+id/sun_iv_3"
                            android:layout_width="25dp"
                            android:layout_height="25dp"
                            android:scaleType="centerCrop"
                            app:srcCompat="@drawable/sun"
                            android:visibility="gone"
                            />

                    </LinearLayout>
                </LinearLayout>

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_horizontal"
                    android:orientation="vertical">

                    <TextView
                        android:id="@+id/Danger"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Опасность"
                        android:textColor="@color/black"
                        android:textSize="25sp"
                        android:textStyle="bold"
                        app:layout_constraintBottom_toTopOf="@+id/line"
                        app:layout_constraintEnd_toStartOf="@id/cd_view" />

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_horizontal"
                        android:layout_marginTop="5dp"
                        android:orientation="horizontal">

                        <TextView
                            android:id="@+id/danger_text"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Не опасно"
                            android:textColor="@color/black"
                            android:textSize="20sp"
                            app:layout_constraintBottom_toTopOf="@+id/line"
                            app:layout_constraintEnd_toStartOf="@id/cd_view" />

                    </LinearLayout>
                </LinearLayout>
            </LinearLayout>

            <TextView
                android:id="@+id/watering"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Полив"
                android:layout_marginTop="30dp"
                android:layout_marginStart="25dp"
                android:layout_marginEnd="25dp"
                android:textColor="@color/black"
                android:textSize="25sp"
                android:textStyle="bold"
                app:layout_constraintTop_toBottomOf="@+id/linearLayout"
                app:layout_constraintStart_toStartOf="parent"
                />

            <TextView
                android:id="@+id/about_watering"
                android:layout_width="match_parent"
                android:layout_marginEnd="25dp"
                android:layout_height="wrap_content"
                android:layout_marginStart="25dp"
                android:text="Георгины поливают один раз в 10 дней. В жару – чаще, в дождливую погоду – реже."
                android:textColor="@color/black"
                android:textSize="20sp"
                app:layout_constraintTop_toBottomOf="@id/watering"
                app:layout_constraintStart_toStartOf="parent"
                />

            <TextView
                android:id="@+id/sun"
                android:layout_width="match_parent"
                android:layout_marginEnd="25dp"
                android:layout_height="wrap_content"
                android:text="Свет"
                android:layout_marginTop="30dp"
                android:layout_marginStart="25dp"
                android:textColor="@color/black"
                android:textSize="25sp"
                android:textStyle="bold"
                app:layout_constraintTop_toBottomOf="@+id/about_watering"
                app:layout_constraintStart_toStartOf="parent"
                />

            <TextView
                android:id="@+id/about_sun"
                android:layout_width="match_parent"
                android:layout_marginEnd="25dp"
                android:layout_height="wrap_content"
                android:layout_marginStart="25dp"
                android:text="Для обильного цветения георгинам необходимо полное солнце, желательно не менее 6-8 часов в день. В более жарком климате им будет полезно немного тени в послеполуденные часы, когда солнце особенно жаркое."
                android:textColor="@color/black"
                android:textSize="20sp"
                app:layout_constraintTop_toBottomOf="@id/sun"
                app:layout_constraintStart_toStartOf="parent"
                />

            <TextView
                android:id="@+id/spray"
                android:layout_width="match_parent"
                android:layout_marginEnd="25dp"
                android:layout_height="wrap_content"
                android:text="Опрыскивание"
                android:layout_marginTop="30dp"
                android:layout_marginStart="25dp"
                android:textColor="@color/black"
                android:textSize="25sp"
                android:textStyle="bold"
                app:layout_constraintTop_toBottomOf="@+id/about_sun"
                app:layout_constraintStart_toStartOf="parent"
                />

            <TextView
                android:id="@+id/about_spray"
                android:layout_width="match_parent"
                android:layout_marginEnd="25dp"
                android:layout_height="wrap_content"
                android:layout_marginStart="25dp"
                android:text="Опрыскивание листьев не требуется"
                android:textColor="@color/black"
                android:textSize="20sp"
                app:layout_constraintTop_toBottomOf="@id/spray"
                app:layout_constraintStart_toStartOf="parent"
                />

            <TextView
                android:id="@+id/fertilize"
                android:layout_width="match_parent"
                android:layout_marginEnd="25dp"
                android:layout_height="wrap_content"
                android:text="Удобрение"
                android:layout_marginTop="30dp"
                android:layout_marginStart="25dp"
                android:textColor="@color/black"
                android:textSize="25sp"
                android:textStyle="bold"
                app:layout_constraintTop_toBottomOf="@+id/about_spray"
                app:layout_constraintStart_toStartOf="parent"
                />

            <TextView
                android:id="@+id/about_fertilize"
                android:layout_width="match_parent"
                android:layout_marginEnd="25dp"
                android:layout_height="wrap_content"
                android:layout_marginStart="25dp"
                android:text="В конце весны или начале лета рекомендуется удобрить растения смесью мочевины (1 ст.л. на ведро) и монофосфата калия (2 ст.л. на ведро). Полученным раствором нужно полить георгины (2 л на 1 растение)."
                android:textColor="@color/black"
                android:textSize="20sp"
                app:layout_constraintTop_toBottomOf="@id/fertilize"
                app:layout_constraintStart_toStartOf="parent"
                />

            <TextView
                android:id="@+id/earth"
                android:layout_width="match_parent"
                android:layout_marginEnd="25dp"
                android:layout_height="wrap_content"
                android:text="Почва"
                android:layout_marginTop="30dp"
                android:layout_marginStart="25dp"
                android:textColor="@color/black"
                android:textSize="25sp"
                android:textStyle="bold"
                app:layout_constraintTop_toBottomOf="@+id/about_fertilize"
                app:layout_constraintStart_toStartOf="parent"
                />

            <TextView
                android:id="@+id/about_earth"
                android:layout_width="match_parent"
                android:layout_marginEnd="25dp"
                android:layout_height="wrap_content"
                android:layout_marginStart="25dp"
                android:text="Лучшей почвой для георгин станет богатая перегноем нейтральная среда, хотя цветы хорошо приживаются и в слабокислых почвах."
                android:textColor="@color/black"
                android:textSize="20sp"
                app:layout_constraintTop_toBottomOf="@id/earth"
                app:layout_constraintStart_toStartOf="parent"
                />

            <TextView
                android:id="@+id/transfer"
                android:layout_width="match_parent"
                android:layout_marginEnd="25dp"
                android:layout_height="wrap_content"
                android:text="Пересадка"
                android:layout_marginTop="30dp"
                android:layout_marginStart="25dp"
                android:textColor="@color/black"
                android:textSize="25sp"
                android:textStyle="bold"
                app:layout_constraintTop_toBottomOf="@+id/about_earth"
                app:layout_constraintStart_toStartOf="parent"
                />

            <TextView
                android:id="@+id/about_transfer"
                android:layout_width="match_parent"
                android:layout_marginEnd="25dp"
                android:layout_height="wrap_content"
                android:layout_marginStart="25dp"
                android:text="Сроки посадки георгины в открытый грунт в первую очередь зависят от климатических особенностей вашего региона. В средней полосе обычно это делают в первой декаде июня, когда температура воздуха прогревается до +10-15 градусов и нет риска возвратных заморозков. Высаживать лучше в вечернее время, чтобы растения не пострадали от солнечных лучей и успели адаптироваться на новом месте."
                android:textColor="@color/black"
                android:textSize="20sp"
                app:layout_constraintTop_toBottomOf="@id/transfer"
                app:layout_constraintStart_toStartOf="parent"
                />

            <TextView
                android:id="@+id/cutting"
                android:layout_width="match_parent"
                android:layout_marginEnd="25dp"
                android:layout_height="wrap_content"
                android:text="Обрезка"
                android:layout_marginTop="30dp"
                android:layout_marginStart="25dp"
                android:textColor="@color/black"
                android:textSize="25sp"
                android:textStyle="bold"
                app:layout_constraintTop_toBottomOf="@+id/about_transfer"
                app:layout_constraintStart_toStartOf="parent"
                />

            <TextView
                android:id="@+id/about_cutting"
                android:layout_width="match_parent"
                android:layout_marginEnd="25dp"
                android:layout_height="wrap_content"
                android:layout_marginStart="25dp"
                android:text="Обрезка не требуется"
                android:textColor="@color/black"
                android:textSize="20sp"
                app:layout_constraintTop_toBottomOf="@id/cutting"
                app:layout_constraintStart_toStartOf="parent"
                />

            <TextView
                android:id="@+id/danger"
                android:layout_width="match_parent"
                android:layout_marginEnd="25dp"
                android:layout_height="wrap_content"
                android:text="Опасность"
                android:layout_marginTop="30dp"
                android:layout_marginStart="25dp"
                android:textColor="@color/black"
                android:textSize="25sp"
                android:textStyle="bold"
                app:layout_constraintTop_toBottomOf="@+id/about_cutting"
                app:layout_constraintStart_toStartOf="parent"
                />

            <TextView
                android:id="@+id/about_danger"
                android:layout_width="match_parent"
                android:layout_marginEnd="25dp"
                android:layout_height="wrap_content"
                android:layout_marginStart="25dp"
                android:text="Не опасно"
                android:textColor="@color/black"
                android:textSize="20sp"
                app:layout_constraintTop_toBottomOf="@id/danger"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintBottom_toBottomOf="parent"
                android:layout_marginBottom="20dp"
                />

            <ImageView
                android:id="@+id/main_progress"
                android:layout_width="200dp"
                android:layout_height="200dp"
                android:layout_gravity="center"
                android:src="@drawable/animation_progree"
                android:visibility="visible"
                app:layout_constraintBottom_toTopOf="@+id/recycler"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />


        </androidx.constraintlayout.widget.ConstraintLayout>

    </ScrollView>


</androidx.constraintlayout.widget.ConstraintLayout>