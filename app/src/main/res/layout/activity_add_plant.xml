<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".AddPlant_Activity">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:scrollbars="vertical">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <androidx.cardview.widget.CardView
                android:id="@+id/cd_view"
                android:layout_width="250dp"
                android:layout_height="250dp"
                android:layout_marginTop="-50dp"
                android:layout_marginEnd="-50dp"
                android:layout_marginBottom="10dp"
                app:cardBackgroundColor="@color/black"
                app:cardCornerRadius="200dp"
                app:layout_constraintBottom_toTopOf="@id/line"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintVertical_bias="0.0">

                <ImageView
                    android:id="@+id/item_img_view_for_add"
                    android:layout_width="250dp"
                    android:layout_height="250dp"
                    android:scaleType="centerCrop"
                     />

            </androidx.cardview.widget.CardView>

            <TextView
                android:id="@+id/name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Georgin"
                android:textColor="@color/black"
                android:textSize="35sp"
                android:layout_marginStart="25dp"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintBottom_toTopOf="@+id/line"
                app:layout_constraintEnd_toStartOf="@id/cd_view" />

            <View
                android:id="@+id/line"
                android:layout_width="match_parent"
                android:layout_marginEnd="20dp"
                android:layout_marginStart="20dp"
                android:layout_height="3dp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintBottom_toTopOf="@id/linearLayout"
                />

            <LinearLayout
                android:id="@+id/linearLayout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginTop="10dp"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/line"
                android:gravity="center_horizontal"
                >

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:layout_gravity="center_horizontal"
                    android:layout_marginEnd="20dp"
                    >

                    <TextView
                        android:id="@+id/Water"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Полив"
                        android:textStyle="bold"
                        android:textColor="@color/black"
                        android:textSize="25sp"
                        app:layout_constraintBottom_toTopOf="@+id/line"
                        app:layout_constraintEnd_toStartOf="@id/cd_view" />

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:layout_marginTop="5dp"
                        android:layout_gravity="center_horizontal">

                        <ImageView
                            android:id="@+id/water_drop_1"
                            android:layout_width="25dp"
                            android:layout_height="25dp"
                            android:scaleType="centerCrop"
                            app:srcCompat="@drawable/drop"
                            android:visibility="gone"
                            />

                        <ImageView
                            android:id="@+id/water_drop_2"
                            android:layout_width="25dp"
                            android:layout_height="25dp"
                            android:scaleType="centerCrop"
                            app:srcCompat="@drawable/drop"
                            android:visibility="gone"
                            />

                        <ImageView
                            android:id="@+id/water_drop_3"
                            android:layout_width="25dp"
                            android:layout_height="25dp"
                            android:scaleType="centerCrop"
                            app:srcCompat="@drawable/drop"
                            android:visibility="gone"
                            />

                    </LinearLayout>
                </LinearLayout>

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginEnd="30dp"
                    android:layout_marginStart="10dp"
                    android:gravity="center_horizontal"
                    android:orientation="vertical">

                    <TextView
                        android:id="@+id/Sun"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Свет"
                        android:textAlignment="center"
                        android:textStyle="bold"
                        android:textColor="@color/black"
                        android:textSize="25sp"
                        app:layout_constraintBottom_toTopOf="@+id/line"
                        app:layout_constraintEnd_toStartOf="@id/cd_view" />

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_horizontal"
                        android:layout_marginTop="7dp"
                        android:orientation="horizontal">

                        <ImageView
                            android:id="@+id/sun_iv_1"
                            android:layout_width="25dp"
                            android:layout_height="25dp"
                            android:scaleType="centerCrop"
                            app:srcCompat="@drawable/sun"
                            android:visibility="gone"
                            />

                        <ImageView
                            android:id="@+id/sun_iv_2"
                            android:layout_width="25dp"
                            android:layout_height="25dp"
                            android:scaleType="centerCrop"
                            app:srcCompat="@drawable/sun"
                            android:visibility="gone"
                            />

                        <ImageView
                            android:id="@+id/sun_iv_3"
                            android:layout_width="25dp"
                            android:layout_height="25dp"
                            android:scaleType="centerCrop"
                            app:srcCompat="@drawable/sun"
                            android:visibility="gone"
                            />

                    </LinearLayout>
                </LinearLayout>

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_horizontal"
                    android:orientation="vertical">

                    <TextView
                        android:id="@+id/Danger"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Опасность"
                        android:textColor="@color/black"
                        android:textSize="25sp"
                        android:textStyle="bold"
                        app:layout_constraintBottom_toTopOf="@+id/line"
                        app:layout_constraintEnd_toStartOf="@id/cd_view" />

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_horizontal"
                        android:layout_marginTop="5dp"
                        android:orientation="horizontal">

                        <TextView
                            android:id="@+id/danger_text"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Не опасно"
                            android:textColor="@color/black"
                            android:textSize="20sp"
                            app:layout_constraintBottom_toTopOf="@+id/line"
                            app:layout_constraintEnd_toStartOf="@id/cd_view" />

                    </LinearLayout>
                </LinearLayout>
            </LinearLayout>

            <TextView
                android:id="@+id/watering"
                android:layout_width="match_parent"
                android:layout_marginEnd="25dp"
                android:layout_height="wrap_content"
                android:text="Полив"
                android:layout_marginTop="30dp"
                android:layout_marginStart="25dp"
                android:textColor="@color/black"
                android:textSize="25sp"
                android:textStyle="bold"
                app:layout_constraintTop_toBottomOf="@+id/linearLayout"
                app:layout_constraintStart_toStartOf="parent"
                />

            <TextView
                android:id="@+id/about_watering"
                android:layout_width="match_parent"
                android:layout_marginEnd="25dp"
                android:layout_height="wrap_content"
                android:layout_marginStart="25dp"
                android:text="Георгины поливают один раз в 10 дней. В жару – чаще, в дождливую погоду – реже."
                android:textColor="@color/black"
                android:textSize="20sp"
                app:layout_constraintTop_toBottomOf="@id/watering"
                app:layout_constraintStart_toStartOf="parent"
                />

            <TextView
                android:id="@+id/sun"
                android:layout_width="match_parent"
                android:layout_marginEnd="25dp"
                android:layout_height="wrap_content"
                android:text="Свет"
                android:layout_marginTop="30dp"
                android:layout_marginStart="25dp"
                android:textColor="@color/black"
                android:textSize="25sp"
                android:textStyle="bold"
                app:layout_constraintTop_toBottomOf="@+id/about_watering"
                app:layout_constraintStart_toStartOf="parent"
                />

            <TextView
                android:id="@+id/about_sun"
                android:layout_width="match_parent"
                android:layout_marginEnd="25dp"
                android:layout_height="wrap_content"
                android:layout_marginStart="25dp"
                android:text="Для обильного цветения георгинам необходимо полное солнце, желательно не менее 6-8 часов в день. В более жарком климате им будет полезно немного тени в послеполуденные часы, когда солнце особенно жаркое."
                android:textColor="@color/black"
                android:textSize="20sp"
                app:layout_constraintTop_toBottomOf="@id/sun"
                app:layout_constraintStart_toStartOf="parent"
                />

            <TextView
                android:id="@+id/spray"
                android:layout_width="match_parent"
                android:layout_marginEnd="25dp"
                android:layout_height="wrap_content"
                android:text="Опрыскивание"
                android:layout_marginTop="30dp"
                android:layout_marginStart="25dp"
                android:textColor="@color/black"
                android:textSize="25sp"
                android:textStyle="bold"
                app:layout_constraintTop_toBottomOf="@+id/about_sun"
                app:layout_constraintStart_toStartOf="parent"
                />

            <TextView
                android:id="@+id/about_spray"
                android:layout_width="match_parent"
                android:layout_marginEnd="25dp"
                android:layout_height="wrap_content"
                android:layout_marginStart="25dp"
                android:text="Опрыскивание листьев не требуется"
                android:textColor="@color/black"
                android:textSize="20sp"
                app:layout_constraintTop_toBottomOf="@id/spray"
                app:layout_constraintStart_toStartOf="parent"
                />

            <TextView
                android:id="@+id/fertilize"
                android:layout_width="match_parent"
                android:layout_marginEnd="25dp"
                android:layout_height="wrap_content"
                android:text="Удобрение"
                android:layout_marginTop="30dp"
                android:layout_marginStart="25dp"
                android:textColor="@color/black"
                android:textSize="25sp"
                android:textStyle="bold"
                app:layout_constraintTop_toBottomOf="@+id/about_spray"
                app:layout_constraintStart_toStartOf="parent"
                />

            <TextView
                android:id="@+id/about_fertilize"
                android:layout_width="match_parent"
                android:layout_marginEnd="25dp"
                android:layout_height="wrap_content"
                android:layout_marginStart="25dp"
                android:text="В конце весны или начале лета рекомендуется удобрить растения смесью мочевины (1 ст.л. на ведро) и монофосфата калия (2 ст.л. на ведро). Полученным раствором нужно полить георгины (2 л на 1 растение)."
                android:textColor="@color/black"
                android:textSize="20sp"
                app:layout_constraintTop_toBottomOf="@id/fertilize"
                app:layout_constraintStart_toStartOf="parent"
                />

            <TextView
                android:id="@+id/earth"
                android:layout_width="match_parent"
                android:layout_marginEnd="25dp"
                android:layout_height="wrap_content"
                android:text="Почва"
                android:layout_marginTop="30dp"
                android:layout_marginStart="25dp"
                android:textColor="@color/black"
                android:textSize="25sp"
                android:textStyle="bold"
                app:layout_constraintTop_toBottomOf="@+id/about_fertilize"
                app:layout_constraintStart_toStartOf="parent"
                />

            <TextView
                android:id="@+id/about_earth"
                android:layout_width="match_parent"
                android:layout_marginEnd="25dp"
                android:layout_height="wrap_content"
                android:layout_marginStart="25dp"
                android:text="Лучшей почвой для георгин станет богатая перегноем нейтральная среда, хотя цветы хорошо приживаются и в слабокислых почвах."
                android:textColor="@color/black"
                android:textSize="20sp"
                app:layout_constraintTop_toBottomOf="@id/earth"
                app:layout_constraintStart_toStartOf="parent"
                />

            <TextView
                android:id="@+id/transfer"
                android:layout_width="match_parent"
                android:layout_marginEnd="25dp"
                android:layout_height="wrap_content"
                android:text="Пересадка"
                android:layout_marginTop="30dp"
                android:layout_marginStart="25dp"
                android:textColor="@color/black"
                android:textSize="25sp"
                android:textStyle="bold"
                app:layout_constraintTop_toBottomOf="@+id/about_earth"
                app:layout_constraintStart_toStartOf="parent"
                />

            <TextView
                android:id="@+id/about_transfer"
                android:layout_width="match_parent"
                android:layout_marginEnd="25dp"
                android:layout_height="wrap_content"
                android:layout_marginStart="25dp"
                android:text="Сроки посадки георгины в открытый грунт в первую очередь зависят от климатических особенностей вашего региона. В средней полосе обычно это делают в первой декаде июня, когда температура воздуха прогревается до +10-15 градусов и нет риска возвратных заморозков. Высаживать лучше в вечернее время, чтобы растения не пострадали от солнечных лучей и успели адаптироваться на новом месте."
                android:textColor="@color/black"
                android:textSize="20sp"
                app:layout_constraintTop_toBottomOf="@id/transfer"
                app:layout_constraintStart_toStartOf="parent"
                />

            <TextView
                android:id="@+id/cutting"
                android:layout_width="match_parent"
                android:layout_marginEnd="25dp"
                android:layout_height="wrap_content"
                android:text="Обрезка"
                android:layout_marginTop="30dp"
                android:layout_marginStart="25dp"
                android:textColor="@color/black"
                android:textSize="25sp"
                android:textStyle="bold"
                app:layout_constraintTop_toBottomOf="@+id/about_transfer"
                app:layout_constraintStart_toStartOf="parent"
                />

            <TextView
                android:id="@+id/about_cutting"
                android:layout_width="match_parent"
                android:layout_marginEnd="25dp"
                android:layout_height="wrap_content"
                android:layout_marginStart="25dp"
                android:text="Обрезка не требуется"
                android:textColor="@color/black"
                android:textSize="20sp"
                app:layout_constraintTop_toBottomOf="@id/cutting"
                app:layout_constraintStart_toStartOf="parent"
                />

            <TextView
                android:id="@+id/danger"
                android:layout_width="match_parent"
                android:layout_marginEnd="25dp"
                android:layout_height="wrap_content"
                android:text="Опасность"
                android:layout_marginTop="30dp"
                android:layout_marginStart="25dp"
                android:textColor="@color/black"
                android:textSize="25sp"
                android:textStyle="bold"
                app:layout_constraintTop_toBottomOf="@+id/about_cutting"
                app:layout_constraintStart_toStartOf="parent"
                />

            <TextView
                android:id="@+id/about_danger"
                android:layout_width="match_parent"
                android:layout_marginEnd="25dp"
                android:layout_height="wrap_content"
                android:layout_marginStart="25dp"
                android:text="Не опасно"
                android:textColor="@color/black"
                android:textSize="20sp"
                app:layout_constraintTop_toBottomOf="@id/danger"
                app:layout_constraintStart_toStartOf="parent"
                />

            <Button
                android:id="@+id/btn"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:layout_constraintTop_toBottomOf="@+id/about_danger"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                android:text="Добавить"
                android:textColor="@color/black"
                android:textSize="20sp"
                android:layout_marginTop="10dp"
                android:layout_marginBottom="10dp"
                app:layout_constraintBottom_toBottomOf="parent"
                />

        </androidx.constraintlayout.widget.ConstraintLayout>
    </ScrollView>

</androidx.constraintlayout.widget.ConstraintLayout>